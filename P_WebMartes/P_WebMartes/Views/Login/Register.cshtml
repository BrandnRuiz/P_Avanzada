@model P_WebMartes.Entidades.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center" style="margin-top:3%;">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Registrar Usuario</h1>
                                </div>
                                @if (ViewBag.MessageScreen != null)
                                {
                                    <div class="alert alert-warning" role="alert" style="text-align:center;">
                                        @ViewBag.MessageScreen
                                    </div>
                                }
                                @using (Html.BeginForm("Register", "Login"))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control form-control-user", @style = "text-align: center;", @placeholder = "Identificación", @onkeyup = "CheckName()", @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-user", @style = "text-align: center;", @placeholder = "Nombre", @readonly = "true", @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Mail, new { @class = "form-control form-control-user", @style = "text-align: center;", @placeholder = "Correo Electrónico", @type = "Email", @required = "true" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @style = "text-align: center;", @placeholder = "Contraseña", @required = "true" })
                                    </div>
                                    <input type="submit" href="index.html" class="btn btn-primary btn-user btn-block" value="Registrar">
                                    <hr>
                                }
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Login","Login")">Volver a la página de Iniciar Sesión</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Estilos/js/UserRegister.js"></script>