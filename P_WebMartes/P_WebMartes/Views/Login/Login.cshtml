@model P_WebMartes.Entidades.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}


<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center" style="margin-top:3%;">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Sistema web - Martes</h1>
                                    <h4 class="text-gray-900 mb-4">Iniciar Sesión</h4>
                                </div>
                                @using (Html.BeginForm("Login", "Login"))
                                {
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Id, new { @class = "form-control form-control-user", @style = "text-align: center;", @placeholder = "Identificación" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @style ="text-align: center;", @placeholder = "Contraseña" })
                                    </div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Iniciar Sesión">
                                    <hr>
                                }
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("RecoverAccess","Login")">Recuperar contraseña</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register","Login")">Create una cuenta</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>